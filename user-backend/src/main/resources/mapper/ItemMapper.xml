<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cykj.mapper.ItemMapper">

    <!--    根据套餐id查询所有项目-->
    <select id="getItemsByPackageId" resultType="com.cykj.pojo.Item">
        select * from Item where item_id in
                                 (select item_id from Package_Item_Relation where package_id = #{packageId})
    </select>

</mapper>